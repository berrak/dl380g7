#!/bin/bash
##############################################################
# MANAGED BY PUPPET. DO NOT EDIT. CHANGES WILL BE WIPED OUT. #
##############################################################
FQDN=`hostname -f`

echo "#######################" >> /var/log/yum-auto-updates
date +%Y-%m-%d-UTC-%H:%M:%S >> /var/log/yum-auto-updates
echo "#######################" >> /var/log/yum-auto-updates

/usr/bin/yum -R 30 -e 0 -d 0 -y update yum >> /var/log/yum-auto-updates

/usr/bin/yum -R 5 -e 0 -d 0 -y update >> /var/log/yum-auto-updates

echo "[OK] Oracle Linux updates (if any) is installed on $FQDN."
