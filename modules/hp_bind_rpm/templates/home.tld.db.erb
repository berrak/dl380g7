$TTL 1D
@ 	IN  SOA <%= myhostname %>.<%= mydomain %>.  root.<%= myhostname %>.<%= mydomain %>.   (
                    <%=utime_serial %>       ; Serial
                    8H             ; Refresh
                    2H             ; Retry
                    4W             ; Expire
                    1D             ; Minimum
)
@ 	IN	NS	<%= myhostname %>.<%= mydomain %>.
@ 	IN	MX	10	<%= myhostname %>.<%= mydomain %>.
@ 	IN	A	<%= myipaddress %>
;
; -- aliases
;
mail				CNAME		<%= myhostname %>
ns1					CNAME		<%= myhostname %>
;
; -- servers in local domain
;
<%= myhostname %>	IN	A		<%= myipaddress %>
carbon				IN	A		192.168.0.24
deborg				IN	A		192.168.0.40
trise				IN	A		192.168.0.41
