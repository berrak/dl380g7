$TTL 1D
@   IN  SOA <%= myhostname %>.<%= mydomain %>.  hostmaster.<%= myhostname %>.<%= mydomain %>.   (
                    <%=utime_serial %>       ; Serial
                    8H             ; Refresh
                    2H             ; Retry
                    4W             ; Expire
                    1D             ; Minimum
)
;
; -- one or more nameservers
;
@	IN	NS	<%= myhostname %>.<%= mydomain %>.
;
; -- mail exchanger
;
@	IN	MX	10	<%= myhostname %>.<%= mydomain %>.
;
; -- primary A records
;
<%= myhostname %>					IN	A		<%= myipaddress %>
<%= myhostname %>.<%= mydomain %>.	IN	A		<%= myipaddress %>
localhost							IN	A		<%= myipaddress %>
<%= mydomain %>.					IN	A		<%= myipaddress %>
;
; -- alias servers
;
mail								IN	CNAME	<%= mydomain %>.
www									IN	CNAME	<%= mydomain %>.
;
; -- other important servers in local domain
;
carbon.<%= mydomain %>.				IN	A		192.168.0.24
deborg.<%= mydomain %>.				IN	A		192.168.0.40
trise.<%= mydomain %>.				IN	A		192.168.0.41

