<network>
  <name><%= name %></name>
  <domain name='<%= name %>'/>
  <forward mode='nat'/>
  <bridge name='<%= bridge_name %>' stp='on' delay='0' />
  <ip address='<%= local_guest_gw %>' netmask='255.255.255.0'>
    <dhcp>
      <range start='<%= local_guest_ip %>' end='<%= local_guest_ip %>' />
    </dhcp>
  </ip>
</network>
